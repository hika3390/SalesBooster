generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Enum ───

enum MemberStatus {
  ACTIVE
  INACTIVE
}

enum MemberRole {
  SALES
  MANAGER
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  USER
}

enum IntegrationStatus {
  DISCONNECTED
  CONNECTED
}

enum DisplayTransition {
  NONE
  FADE
  SLIDE_LEFT
  SLIDE_RIGHT
}

enum DisplayViewType {
  PERIOD_GRAPH
  CUMULATIVE_GRAPH
  TREND_GRAPH
  REPORT
  RECORD
  CUSTOM_SLIDE
}

enum CustomSlideType {
  IMAGE
  YOUTUBE
  TEXT
}

enum AuditAction {
  USER_LOGIN
  USER_LOGOUT
  MEMBER_CREATE
  MEMBER_UPDATE
  MEMBER_DELETE
  GROUP_CREATE
  GROUP_UPDATE
  GROUP_DELETE
  GROUP_SYNC_MEMBERS
  SALES_RECORD_CREATE
  SALES_RECORD_UPDATE
  SALES_RECORD_DELETE
  TARGET_UPSERT
  SETTINGS_UPDATE
  INTEGRATION_STATUS_UPDATE
  DISPLAY_CONFIG_UPDATE
  CUSTOM_FIELD_CREATE
  CUSTOM_FIELD_UPDATE
  CUSTOM_FIELD_DELETE
  CUSTOM_SLIDE_CREATE
  CUSTOM_SLIDE_UPDATE
  CUSTOM_SLIDE_DELETE
  TENANT_CREATE
  TENANT_UPDATE
  TENANT_DELETE
}

// ─── Tenant Model ───

model Tenant {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users          User[]
  departments    Department[]
  members        Member[]
  groups         Group[]
  groupMembers   GroupMember[]
  salesRecords   SalesRecord[]
  targets        Target[]
  systemSettings SystemSetting[]
  integrations   Integration[]
  displayConfigs DisplayConfig[]
  customSlides   CustomSlide[]
  customFields   CustomField[]
  auditLogs      AuditLog[]
}

// ─── Auth Model ───

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  name      String?
  role      UserRole   @default(USER)
  tenantId  Int?
  tenant    Tenant?    @relation(fields: [tenantId], references: [id])
  sessions  Session[]
  auditLogs AuditLog[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([tenantId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ─── Business Model ───

model Department {
  id        Int      @id @default(autoincrement())
  name      String
  tenantId  Int
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  members   Member[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId])
}

model Member {
  id           Int            @id @default(autoincrement())
  name         String
  email        String
  role         MemberRole     @default(SALES)
  status       MemberStatus   @default(ACTIVE)
  imageUrl     String?
  departmentId Int?
  tenantId     Int
  tenant       Tenant         @relation(fields: [tenantId], references: [id])
  department   Department?    @relation(fields: [departmentId], references: [id])
  salesRecords SalesRecord[]
  targets      Target[]
  groupMembers GroupMember[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@unique([tenantId, email])
  @@index([tenantId])
}

model Group {
  id        Int           @id @default(autoincrement())
  name      String
  managerId Int?
  tenantId  Int
  tenant    Tenant        @relation(fields: [tenantId], references: [id])
  members   GroupMember[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([tenantId])
}

model GroupMember {
  id       Int    @id @default(autoincrement())
  groupId  Int
  memberId Int
  tenantId Int
  tenant   Tenant @relation(fields: [tenantId], references: [id])
  group    Group  @relation(fields: [groupId], references: [id])
  member   Member @relation(fields: [memberId], references: [id])

  @@unique([groupId, memberId])
  @@index([tenantId])
}

model SalesRecord {
  id           Int      @id @default(autoincrement())
  memberId     Int
  amount       Int
  description  String?
  recordDate   DateTime
  customFields Json?
  tenantId     Int
  tenant       Tenant   @relation(fields: [tenantId], references: [id])
  member       Member   @relation(fields: [memberId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([tenantId])
}

model Target {
  id        Int    @id @default(autoincrement())
  memberId  Int
  monthly   Int
  quarterly Int
  annual    Int
  year      Int
  month     Int
  tenantId  Int
  tenant    Tenant @relation(fields: [tenantId], references: [id])
  member    Member @relation(fields: [memberId], references: [id])

  @@unique([tenantId, memberId, year, month])
  @@index([tenantId])
}

model SystemSetting {
  id       Int    @id @default(autoincrement())
  key      String
  value    String
  tenantId Int
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  @@unique([tenantId, key])
  @@index([tenantId])
}

model Integration {
  id          Int               @id @default(autoincrement())
  name        String
  description String
  status      IntegrationStatus @default(DISCONNECTED)
  icon        String
  config      Json?
  tenantId    Int
  tenant      Tenant            @relation(fields: [tenantId], references: [id])

  @@index([tenantId])
}

model AuditLog {
  id        Int         @id @default(autoincrement())
  userId    String
  user      User        @relation(fields: [userId], references: [id])
  action    AuditAction
  detail    String?
  tenantId  Int
  tenant    Tenant      @relation(fields: [tenantId], references: [id])
  createdAt DateTime    @default(now())

  @@index([tenantId])
}

// ─── Display Mode ───

model DisplayConfig {
  id                  Int                  @id @default(autoincrement())
  loop                Boolean              @default(true)
  dataRefreshInterval Int                  @default(60000)
  filterGroupId       String               @default("")
  filterMemberId      String               @default("")
  transition          DisplayTransition    @default(NONE)
  companyLogoUrl      String               @default("")
  teamName            String               @default("")
  darkMode            Boolean              @default(false)
  tenantId            Int
  tenant              Tenant               @relation(fields: [tenantId], references: [id])
  views               DisplayConfigView[]
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt

  @@index([tenantId])
}

// ─── Custom Fields ───

enum CustomFieldType {
  TEXT
  DATE
  SELECT
}

model CustomField {
  id         Int             @id @default(autoincrement())
  name       String
  fieldType  CustomFieldType
  options    Json?
  isRequired Boolean         @default(false)
  sortOrder  Int             @default(0)
  isActive   Boolean         @default(true)
  tenantId   Int
  tenant     Tenant          @relation(fields: [tenantId], references: [id])
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt

  @@index([tenantId])
}

model DisplayConfigView {
  id              Int              @id @default(autoincrement())
  displayConfigId Int
  viewType        DisplayViewType
  enabled         Boolean          @default(true)
  duration        Int              @default(30)
  order           Int              @default(0)
  title           String           @default("")
  customSlideId   Int?
  customSlide     CustomSlide?     @relation(fields: [customSlideId], references: [id], onDelete: SetNull)
  displayConfig   DisplayConfig    @relation(fields: [displayConfigId], references: [id], onDelete: Cascade)
}

model CustomSlide {
  id        Int              @id @default(autoincrement())
  slideType CustomSlideType
  title     String           @default("")
  content   String           @default("")
  imageUrl  String           @default("")
  tenantId  Int
  tenant    Tenant           @relation(fields: [tenantId], references: [id])
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  views     DisplayConfigView[]

  @@index([tenantId])
}
